    "{{ name }}" = python.mkDerivation {
      name = "{{ name }}-{{ version }}";
      src = {{ fetch_expression }};
      doCheck = commonDoCheck;
      format = "{{ package_format }}";
      buildInputs = commonBuildInputs ++ {{ buildInputs }};
      propagatedBuildInputs = {{ propagatedBuildInputs }};
      meta = with pkgs.lib; {
        homepage = "{{ homepage }}";
        license = {{ license }};
        description = "{{ description }}";
      };
    };
